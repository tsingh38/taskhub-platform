terraform {
  required_providers {
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.0"
    }
  }
}

# Uses kubeconfig from env var KUBECONFIG (set by Jenkins)
provider "kubernetes" {}

provider "helm" {
  kubernetes {}
}